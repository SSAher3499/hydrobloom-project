PORT=5000
NODE_ENV=development

# Database (SQLite for development, PostgreSQL for production)
DATABASE_URL="file:./dev.db"
# For production PostgreSQL:
# DATABASE_URL="postgresql://username:password@localhost:5432/ecofarmlogix_db?schema=public"

# JWT & Security
JWT_SECRET=your_super_secret_jwt_key_change_in_production
OTP_SALT=your_otp_salt_key_change_in_production

# Frontend URL (for CORS and redirects)
FRONTEND_URL=http://localhost:3000

# Email Configuration (SendGrid)
SENDGRID_API_KEY=your_sendgrid_api_key
FROM_EMAIL=noreply@EcoFarmLogix.com

# Email OTP - Dev with MailHog (docker local)
MH_HOST=localhost
MH_PORT=1025

# Email OTP - Dev with Mailtrap (if not using MailHog)
MT_HOST=sandbox.smtp.mailtrap.io
MT_PORT=2525
MT_USER=replace_me
MT_PASS=replace_me

# SMS Configuration (Twilio)
TWILIO_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_FROM_NUMBER=+1234567890

# External APIs (existing)
OPENWEATHER_API_KEY=your_openweather_api_key
TWILIO_WHATSAPP_FROM=whatsapp:+14155238886

# Development Settings
BYPASS_OTP=true