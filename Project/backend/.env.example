PORT=5000
NODE_ENV=development

# Database (PostgreSQL with TimescaleDB for IoT time-series data)
DATABASE_URL="postgresql://growloc_user:growloc_password@localhost:5432/growloc_db?schema=public"
# For Docker:
# DATABASE_URL="postgresql://growloc_user:growloc_password@postgres:5432/growloc_db?schema=public"

# JWT & Security
JWT_SECRET=your_super_secret_jwt_key_change_in_production
OTP_SALT=your_otp_salt_key_change_in_production

# Frontend URL (for CORS and redirects)
FRONTEND_URL=http://localhost:3000

# Email Configuration (SendGrid)
SENDGRID_API_KEY=your_sendgrid_api_key
FROM_EMAIL=noreply@EcoFarmLogix.com

# Email OTP - Dev with MailHog (docker local)
MH_HOST=localhost
MH_PORT=1025

# Email OTP - Dev with Mailtrap (if not using MailHog)
MT_HOST=sandbox.smtp.mailtrap.io
MT_PORT=2525
MT_USER=replace_me
MT_PASS=replace_me

# SMS Configuration (Twilio)
TWILIO_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_FROM_NUMBER=+1234567890

# External APIs (existing)
OPENWEATHER_API_KEY=your_openweather_api_key
TWILIO_WHATSAPP_FROM=whatsapp:+14155238886

# Development Settings
BYPASS_OTP=true

# ============================================================================
# IoT / Industrial Automation Settings
# ============================================================================

# MQTT Broker Configuration
MQTT_BROKER_URL=mqtt://localhost:1883
MQTT_BROKER_URL_TLS=mqtts://myfarm.com:8883
MQTT_USERNAME=growloc_mqtt
MQTT_PASSWORD=change_this_in_production
MQTT_CLIENT_ID=growloc-backend

# MQTT Topics
MQTT_TOPIC_SENSOR_DATA=growloc/+/sensors/+/data
MQTT_TOPIC_ACTUATOR_COMMAND=growloc/+/actuators/+/command
MQTT_TOPIC_ACTUATOR_STATUS=growloc/+/actuators/+/status
MQTT_TOPIC_PI_STATUS=growloc/+/status

# Raspberry Pi Controller Settings (for pi-controller service)
PI_SERIAL_PORT=/dev/ttyUSB0
PI_BAUD_RATE=9600
PI_DATA_BITS=8
PI_STOP_BITS=1
PI_PARITY=none

# Data Retention (days)
SENSOR_DATA_RETENTION_DAYS=30
AGGREGATED_DATA_RETENTION_DAYS=365