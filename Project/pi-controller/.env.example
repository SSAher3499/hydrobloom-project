# Raspberry Pi Controller Configuration

# Pi Identification
PI_ID=your_raspberry_pi_mac_address
PI_NAME=Polyhouse-1-Controller
FARM_ID=your_farm_id_from_cloud
POLYHOUSE_ID=your_polyhouse_id_from_cloud

# Serial Port Configuration (Modbus RTU)
SERIAL_PORT=/dev/ttyUSB0
BAUD_RATE=9600
DATA_BITS=8
STOP_BITS=1
PARITY=none

# MQTT Cloud Broker (for syncing to cloud)
MQTT_BROKER_URL=mqtts://myfarm.com:8883
MQTT_USERNAME=growloc_mqtt
MQTT_PASSWORD=change_this_in_production
MQTT_CLIENT_ID=pi_controller_unique_id

# MQTT Topics
MQTT_TOPIC_PREFIX=growloc

# Local SQLite Database (for offline queue)
DATABASE_PATH=./data/queue.db

# Data Collection Intervals (milliseconds)
SENSOR_READ_INTERVAL=5000
SENSOR_PUBLISH_INTERVAL=5000
HEARTBEAT_INTERVAL=30000

# Control Logic Settings
ENABLE_THRESHOLD_CONTROL=true
ENABLE_PID_CONTROL=true
ENABLE_SCHEDULED_CONTROL=true
EMERGENCY_STOP_REGISTER=100

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/pi-controller.log

# Retry Settings
MAX_MODBUS_RETRIES=3
MODBUS_TIMEOUT=5000
MQTT_RECONNECT_PERIOD=5000
